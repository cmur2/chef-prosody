-- blanks. Good luck, and happy Jabbering!

---------- Server-wide settings ----------
-- Settings in this section apply to the whole server and are the default settings
-- for any virtual hosts

-- This is a (by default, empty) list of accounts that are admins
-- for the server. Note that you must create the accounts separately
-- (see http://prosody.im/doc/creating_accounts for info)
-- Example: admins = { "user1@example.com", "user2@example.net" }
admins = <%= @node.lua_type(@config[:admins]) %>;

-- Enable use of libevent for better performance under high load
-- For more information see: http://prosody.im/doc/libevent
use_libevent = <%= @node.lua_type(@config[:use_libevent]) %>;

use_ipv6 = <%= @node.lua_type(@config[:use_ipv6]) %>;

-- This is the list of modules Prosody will load on startup.
-- It looks for mod_modulename.lua in the plugins folder, so make sure that exists too.
-- Documentation on modules can be found at: http://prosody.im/doc/modules
modules_enabled = <%= @node.lua_type(@config[:modules_enabled]) %>;

-- These modules are auto-loaded, should you
-- for (for some mad reason) want to disable
-- them then uncomment them below
modules_disabled = <%= @node.lua_type(@config[:modules_disabled]) %>;

-- Disable account creation by default, for security
-- For more information see http://prosody.im/doc/creating_accounts
allow_registration = <%= @node.lua_type(@config[:allow_registration]) %>;

-- Debian:
--   send the server to background.
--
daemonize = <%= @node.lua_type(@config[:daemonize]) %>;

-- Debian:
--   Please, don't change this option since /var/run/prosody/
--   is one of the few directories Prosody is allowed to write to
--
pidfile = <%= @node.lua_type(@config[:pidfile]) %>;

-- These are the SSL/TLS-related settings. If you don't want
-- to use SSL/TLS, you may comment or remove this
ssl = <%= @node.lua_type(@config[:ssl]) %>;

-- Require encryption on client/server connections?
c2s_require_encryption = <%= @node.lua_type(@config[:c2s_require_encryption]) %>;
s2s_require_encryption = <%= @node.lua_type(@config[:s2s_require_encryption]) %>;

-- Debian:
--  all to var/log
--  errors to syslog also
--
log = <%= @node.lua_type(@config[:log]) %>;

-- Loads all configuration files in /etc/prosody/conf.d/ --
Include "conf.d/*.cfg.lua"
